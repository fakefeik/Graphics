<UserControl x:Class="Graphics.View.PolyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Graphics.View"
             Focusable="True"
             Loaded="PolyView_OnLoaded"
             Unloaded="PolyView_OnUnloaded"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid Background="Black">
            <Image x:Name="Image" Grid.Row="0" Source="{Binding ImageSource}"/>
        </Grid>
        <Image Grid.Row="1" Source="{Binding ImageName}"/>
    </Grid>
</UserControl>
